<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wangjie.testactbar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/> 
    
    <application
        android:name="wangjie.app.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="wangjie.testactbar.MainActivity"
            android:label="@string/app_name" 
            android:theme="@style/ActivityStyle1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="wangjie.testactbar.HotActivity"
            android:theme="@style/ActivityStyle2">
        </activity>
        <activity
            android:name="wangjie.testactbar.UniverseActivity"
            android:theme="@style/ActivityStyle1">
        </activity>
        <activity
            android:name="wangjie.testactbar.RecordActivity"
            android:theme="@style/ActivityStyle1">
        </activity>
        <activity
            android:name="wangjie.testactbar.BookDetailActivity"
            android:theme="@style/ActivityStyle1">
        </activity>        
    </application>

</manifest>
